{
  "name": "todo-api",
  "version": "0.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "watch:server": "nodemon --exec ts-node src/index.ts",
    "watch:codegen": "nodemon --exec 'yarn codegen --watch graphql/** --ext ts,graphql'",
    "lint": "eslint --ext .ts .",
    "codegen:schema": "ts-node src/build-schema.ts",
    "codegen:types": "graphql-codegen --config codegen.ts",
    "codegen": "yarn codegen:schema && yarn codegen:types",
    "postinstall": "yarn codegen"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-codegen/typescript-resolvers": "^3.2.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/schema": "^9.0.19",
    "@graphql-tools/utils": "^9.2.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.6.0",
    "graphql-playground-middleware-express": "^1.7.23"
  }
}
